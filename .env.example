# ============================================================================
# DEPICTIO ENVIRONMENT VARIABLES
# ============================================================================
# Description: Configuration file for Depictio application services
# Usage: Copy this file to .env and uncomment/modify variables as needed
# ----------------------------------------------------------------------------

# ----------------------------------------------------------------------------
# Application Context
# ----------------------------------------------------------------------------
# Defines the runtime context (options: server, client)
DEPICTIO_CONTEXT=server

# ----------------------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------------------
# Controls application logging levels
DEPICTIO_LOGGING_VERBOSITY_LEVEL=INFO

# ----------------------------------------------------------------------------
# MinIO/S3 Storage Configuration
# ----------------------------------------------------------------------------
# Object storage server configuration for data files and deltatables
DEPICTIO_MINIO_ROOT_USER=minio
DEPICTIO_MINIO_ROOT_PASSWORD=minio123
# DEPICTIO_MINIO_SERVICE_NAME=minio
# DEPICTIO_MINIO_SERVICE_PORT=9000
# DEPICTIO_MINIO_EXTERNAL_HOST=localhost
# DEPICTIO_MINIO_EXTERNAL_PORT=9000
# DEPICTIO_MINIO_EXTERNAL_PROTOCOL=http
# DEPICTIO_MINIO_PUBLIC_URL=http://localhost:9000
# DEPICTIO_MINIO_EXTERNAL_SERVICE=false
# DEPICTIO_MINIO_BUCKET=depictio-bucket

# ----------------------------------------------------------------------------
# MongoDB Configuration
# ----------------------------------------------------------------------------
# Database server settings
# DEPICTIO_MONGODB_SERVICE_NAME=mongo
# DEPICTIO_MONGODB_SERVICE_PORT=27018
# DEPICTIO_MONGODB_EXTERNAL_HOST=localhost
# DEPICTIO_MONGODB_EXTERNAL_PORT=27018
# DEPICTIO_MONGODB_EXTERNAL_PROTOCOL=http
# DEPICTIO_MONGODB_PUBLIC_URL=
# DEPICTIO_MONGODB_EXTERNAL_SERVICE=false
# DEPICTIO_MONGODB_DB_NAME=depictioDB
# DEPICTIO_MONGODB_WIPE=false

# ----------------------------------------------------------------------------
# FastAPI Server Configuration
# ----------------------------------------------------------------------------
# Backend API server network settings
# DEPICTIO_FASTAPI_SERVICE_NAME=depictio-backend
# DEPICTIO_FASTAPI_SERVICE_PORT=8058
# DEPICTIO_FASTAPI_EXTERNAL_HOST=localhost
# DEPICTIO_FASTAPI_EXTERNAL_PORT=8058
# DEPICTIO_FASTAPI_EXTERNAL_PROTOCOL=http
# DEPICTIO_FASTAPI_PUBLIC_URL=
# DEPICTIO_FASTAPI_EXTERNAL_SERVICE=false
# DEPICTIO_FASTAPI_HOST=0.0.0.0
# DEPICTIO_FASTAPI_WORKERS=1
# DEPICTIO_FASTAPI_SSL=false
# DEPICTIO_FASTAPI_LOGGING_LEVEL=INFO

# ----------------------------------------------------------------------------
# Dash Frontend Configuration
# ----------------------------------------------------------------------------
# Dashboard server network settings
# DEPICTIO_DASH_SERVICE_NAME=depictio-frontend
# DEPICTIO_DASH_SERVICE_PORT=5080
# DEPICTIO_DASH_EXTERNAL_HOST=localhost
# DEPICTIO_DASH_EXTERNAL_PORT=5080
# DEPICTIO_DASH_EXTERNAL_PROTOCOL=http
# DEPICTIO_DASH_PUBLIC_URL=
# DEPICTIO_DASH_EXTERNAL_SERVICE=false
# DEPICTIO_DASH_HOST=0.0.0.0
# DEPICTIO_DASH_WORKERS=1
# DEPICTIO_DASH_DEBUG=true
# DEPICTIO_DASH_AUTO_GENERATE_FIGURES=true

# ----------------------------------------------------------------------------
# Authentication Configuration
# ----------------------------------------------------------------------------
# Authentication and key management
# DEPICTIO_AUTH_KEYS_DIR=keys
# DEPICTIO_AUTH_KEYS_ALGORITHM=RS256
# DEPICTIO_AUTH_CLI_CONFIG_DIR=.depictio
# DEPICTIO_AUTH_INTERNAL_API_KEY=your-custom-api-key
# DEPICTIO_AUTH_UNAUTHENTICATED_MODE=false
# DEPICTIO_AUTH_ANONYMOUS_USER_EMAIL=anonymous@depict.io
# DEPICTIO_AUTH_TEMPORARY_USER_EXPIRY_HOURS=24
# DEPICTIO_AUTH_TEMPORARY_USER_EXPIRY_MINUTES=0

# Google OAuth2 Configuration
# DEPICTIO_AUTH_GOOGLE_OAUTH_ENABLED=false
# DEPICTIO_AUTH_GOOGLE_OAUTH_CLIENT_ID=your-client-id.apps.googleusercontent.com
# DEPICTIO_AUTH_GOOGLE_OAUTH_CLIENT_SECRET=GOCSPX-your-client-secret
# DEPICTIO_AUTH_GOOGLE_OAUTH_REDIRECT_URI=http://localhost:5080/auth

# ----------------------------------------------------------------------------
# Performance Configuration
# ----------------------------------------------------------------------------
# Timeout and performance settings for production environments

# HTTP client timeouts (in seconds)
# DEPICTIO_PERFORMANCE_HTTP_CLIENT_TIMEOUT=30
# DEPICTIO_PERFORMANCE_API_REQUEST_TIMEOUT=60

# Browser/Playwright timeouts (in milliseconds)
# DEPICTIO_PERFORMANCE_BROWSER_NAVIGATION_TIMEOUT=60000
# DEPICTIO_PERFORMANCE_BROWSER_PAGE_LOAD_TIMEOUT=90000
# DEPICTIO_PERFORMANCE_BROWSER_ELEMENT_TIMEOUT=30000

# Screenshot-specific timeouts (production typically needs longer)
# DEPICTIO_PERFORMANCE_SCREENSHOT_NAVIGATION_TIMEOUT=45000
# DEPICTIO_PERFORMANCE_SCREENSHOT_CONTENT_WAIT=15000
# DEPICTIO_PERFORMANCE_SCREENSHOT_STABILIZATION_WAIT=5000
# DEPICTIO_PERFORMANCE_SCREENSHOT_CAPTURE_TIMEOUT=90000
# DEPICTIO_PERFORMANCE_SCREENSHOT_API_TIMEOUT=300

# Service readiness check settings
# DEPICTIO_PERFORMANCE_SERVICE_READINESS_RETRIES=5
# DEPICTIO_PERFORMANCE_SERVICE_READINESS_DELAY=3
# DEPICTIO_PERFORMANCE_SERVICE_READINESS_TIMEOUT=10

# Network performance settings
# DEPICTIO_PERFORMANCE_DNS_CACHE_TTL=300
# DEPICTIO_PERFORMANCE_CONNECTION_POOL_SIZE=10
# DEPICTIO_PERFORMANCE_MAX_KEEPALIVE_CONNECTIONS=5

# ----------------------------------------------------------------------------
# Backup and Restore Configuration
# ----------------------------------------------------------------------------
# Data backup and restore settings

# Base directories (relative to project root)
# DEPICTIO_BACKUP_BASE_DIR=.
# DEPICTIO_BACKUP_BACKUP_DIR=backups
# DEPICTIO_BACKUP_S3_LOCAL_BACKUP_DIR=backups/s3_data_backups

# S3 data backup strategy: 's3_to_s3', 'local', or 'both'
# DEPICTIO_BACKUP_S3_BACKUP_STRATEGY=s3_to_s3

# Separate backup S3 bucket configuration
# DEPICTIO_BACKUP_BACKUP_S3_ENABLED=false
# DEPICTIO_BACKUP_BACKUP_S3_BUCKET=depictio-backups
# DEPICTIO_BACKUP_BACKUP_S3_ENDPOINT_URL=
# DEPICTIO_BACKUP_BACKUP_S3_ACCESS_KEY=
# DEPICTIO_BACKUP_BACKUP_S3_SECRET_KEY=
# DEPICTIO_BACKUP_BACKUP_S3_REGION=us-east-1

# Backup optimization settings
# DEPICTIO_BACKUP_COMPRESS_LOCAL_BACKUPS=true
# DEPICTIO_BACKUP_BACKUP_FILE_RETENTION_DAYS=30

# ----------------------------------------------------------------------------
# Analytics Configuration
# ----------------------------------------------------------------------------
# Internal analytics tracking system

# Enable/disable analytics tracking
# DEPICTIO_ANALYTICS_ENABLED=true

# Session and data retention settings
# DEPICTIO_ANALYTICS_SESSION_TIMEOUT_MINUTES=30
# DEPICTIO_ANALYTICS_CLEANUP_DAYS=90
# DEPICTIO_ANALYTICS_TRACK_ANONYMOUS_USERS=true
# DEPICTIO_ANALYTICS_CLEANUP_ENABLED=true

# ----------------------------------------------------------------------------
# Google Analytics Configuration
# ----------------------------------------------------------------------------
# External web analytics integration (GA4)

# Enable Google Analytics tracking
# DEPICTIO_GOOGLE_ANALYTICS_ENABLED=false

# GA4 Measurement ID (get from Google Analytics dashboard)
# DEPICTIO_GOOGLE_ANALYTICS_TRACKING_ID=G-XXXXXXXXXX

# ----------------------------------------------------------------------------
# System Configuration
# ----------------------------------------------------------------------------
# Container user and group IDs (uncomment to set specific values)
#UID=502
#GID=20

# ----------------------------------------------------------------------------
# Development Settings (Keep at the end for contributors)
# ----------------------------------------------------------------------------
# Toggle development mode for the application
# DEV_MODE=false

# Enable Playwright development mode for testing
# DEPICTIO_PLAYWRIGHT_DEV_MODE=false
