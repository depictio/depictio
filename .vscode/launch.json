    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "depictio/dash/app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true,
        },
        {
            "name": "Python: Dash",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/depictio/dash/app.py",
            "console": "integratedTerminal",
            "justMyCode": false,
        }

    ]
}